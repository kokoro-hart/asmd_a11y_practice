{
  "name": "astro-basic-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "clean": "astro clean",
    "lint:es": "eslint --fix --cache 'src/**/*.{astro,js,ts,json}'",
    "lint:style": "stylelint --fix \"src/**/*.scss\"",
    "lint:html": "markuplint \"src/**/*.astro\"",
    "format": "prettier ./src --write --ignore-path .gitignore",
    "commitmsg": "commitlint --edit ${1}",
    "check-types": "tsc --project tsconfig.json --pretty --noEmit",
    "validate": "npm run check-types && lint-staged --no-stash"
  },
  "dependencies": {
    "@astrojs/sitemap": "^1.2.2",
    "astro": "^2.10.15",
    "micromodal": "^0.4.10",
    "ress": "^4.0.0",
    "swiper": "^8.3.2"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^4.0.0",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@markuplint/astro-parser": "^3.6.3",
    "@rollup/plugin-yaml": "^4.0.1",
    "@types/micromodal": "^0.3.3",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "astro-compress": "^2.0.4",
    "dayjs": "^1.11.10",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-astro": "^0.21.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-unicorn": "^47.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "markuplint": "^3.9.1",
    "prettier": "^2.8.1",
    "prettier-plugin-astro": "^0.7.2",
    "sass": "^1.57.1",
    "stylelint": "14.16.1",
    "stylelint-config-html": "1.1.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "4.4.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.6"
  }
}
